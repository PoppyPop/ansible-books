---


- hosts: ipa
  #become: yes
  tasks:
  - name: Add or modify acc.mo-ot.fr A to 10.0.2.1"
    nsupdate:
      key_name: "{{ ddns_key_name }}"
      key_secret: "{{ ddns_secret_key }}"
      key_algorithm: "{{ ddns_key_alg }}"
      server: "10.0.2.2"
      zone: "mo-ot.fr"
      record: "acc"
      value: "10.0.2.1"
      type: "A"
      state: present