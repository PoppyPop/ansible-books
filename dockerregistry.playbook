---

- hosts: dockerregistry
  become: yes

  tasks:
    - name: Create folder - registry
      file:
        path: registry
        state: directory
    - name: copy docker-compose.yml
      template:
        src: "{{ item }}"
        dest: registry/{{ item | basename | regex_replace('\.j2$', '') }}
      with_fileglob:
        - registry/*.j2
    - name: Deploy docker_compose
      community.docker.docker_compose:
        project_src: registry
        restarted : true