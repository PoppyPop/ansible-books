---
services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    pull_policy: always
    ports:
      - 8000:8000
      - 9000:9000
    volumes:
      - /opt/apps/portainer:/data
      - /var/run/docker.sock:/var/run/docker.sock
    restart: unless-stopped
