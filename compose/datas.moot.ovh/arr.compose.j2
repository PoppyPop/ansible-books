---
services:
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
    volumes:
      - /opt/apps/radarr/data:/config
      - /datas/dls:/datas
    ports:
      - 7878:7878
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.radarr.rule=Host(`radarr.{{inventory_hostname}}`)"
      - "traefik.http.services.radarr.loadbalancer.server.port=7878"

  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
    volumes:
      - /opt/apps/sonarr/data:/config
      - /datas/dls:/datas
    ports:
      - 8989:8989
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.sonarr.rule=Host(`sonarr.{{inventory_hostname}}`)"
      - "traefik.http.services.sonarr.loadbalancer.server.port=8989"

  rdtclient:
    image: rogerfar/rdtclient
    container_name: rdtclient
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
    volumes:
      - /opt/apps/rdt/config:/data/db
      - /datas/dls:/datas
    logging:
       driver: json-file
       options:
          max-size: 10m
    ports:
      - 6500:6500
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.rdtclient.rule=Host(`rdtclient.{{inventory_hostname}}`)"
      - "traefik.http.services.rdtclient.loadbalancer.server.port=6500"

  deluge:
    image: lscr.io/linuxserver/deluge:latest
    container_name: deluge
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
      - DELUGE_LOGLEVEL=error #optional
    volumes:
      - /opt/apps/deluge/appdata:/config
      - /datas/dls:/datas
    ports:
      - 6881:6881
      - 6881:6881/udp
      - 58846:58846 #optional
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.deluge.rule=Host(`deluge.{{inventory_hostname}}`)"
      - "traefik.http.services.deluge.loadbalancer.server.port=8112"

  prowlarr:
    image: lscr.io/linuxserver/prowlarr:latest
    container_name: prowlarr
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
    volumes:
      - /opt/apps/prowlarr/data:/config
    ports:
      - 9696:9696
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.prowlarr.rule=Host(`prowlarr.{{inventory_hostname}}`)"
      - "traefik.http.services.prowlarr.loadbalancer.server.port=9696"

  bazarr:
    image: lscr.io/linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
    volumes:
      - /opt/apps/bazarr/config:/config
      - /datas/dls:/datas
    ports:
      - 6767:6767
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.bazarr.rule=Host(`bazarr.{{inventory_hostname}}`)"
      - "traefik.http.services.bazarr.loadbalancer.server.port=6767"

  seerr:
    image: ghcr.io/seerr-team/seerr:latest
    init: true
    container_name: seerr
    environment:
      - LOG_LEVEL=debug
      - TZ=Europe/Paris
      - PORT=5055 #optional
    ports:
      - 5055:5055
    volumes:
      - /opt/apps/overseer/config:/app/config
    healthcheck:
      test: wget --no-verbose --tries=1 --spider http://localhost:5055/api/v1/status || exit 1
      start_period: 20s
      timeout: 3s
      interval: 15s
      retries: 3
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.overseerr.rule=Host(`overseerr.{{inventory_hostname}}`)"
      - "traefik.http.services.overseerr.loadbalancer.server.port=5055"

  maintainerr:
    image: ghcr.io/maintainerr/maintainerr:2
    container_name: maintainerr
    user: 10010:10008
    volumes:
      - /opt/apps/maintainerr/data:/opt/data
    environment:
      - TZ=Europe/Paris
    ports:
      - 6246:6246
    restart: unless-stopped
    pull_policy: always
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.maintainerr.rule=Host(`maintainerr.{{inventory_hostname}}`)"
      - "traefik.http.services.maintainerr.loadbalancer.server.port=6246"

  tautulli:
    image: ghcr.io/tautulli/tautulli
    container_name: tautulli
    restart: unless-stopped
    pull_policy: always
    volumes:
      - /opt/apps/tautulli:/config
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
    ports:
      - 8181:8181
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.tautulli.rule=Host(`tautulli.{{inventory_hostname}}`)"
      - "traefik.http.services.tautulli.loadbalancer.server.port=8181"

networks:
  traefik:
    external: true
...
