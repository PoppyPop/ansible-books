services:
  aria2-pro:
    container_name: aria2-pro
    image: p3terx/aria2-pro
    #user: "10010:10008"
    environment:
      - PUID=10010
      - PGID=10008
      - UMASK_SET=007
      - RPC_SECRET=Secret
      - RPC_PORT=6800
      - LISTEN_PORT=6888
      - DISK_CACHE=64M
      - IPV6_MODE=false
      - UPDATE_TRACKERS=true
      - CUSTOM_TRACKER_URL=
      - TZ=Europe/Paris
    volumes:
      - /opt/apps/aria2/aria2-config:/config
      - /datas/dls/ddl/downloads:/downloads
    ports:
      - 6800:6800
      - 6888:6888
      - 6888:6888/udp
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.aria2.rule=Host(`aria2.{{inventory_hostname}}`)"
      - "traefik.http.services.aria2.loadbalancer.server.port=6800"
    restart: unless-stopped
    pull_policy: always
# Since Aria2 will continue to generate logs, limit the log size to 1M to prevent your hard disk from running out of space.
    logging:
      driver: json-file
      options:
        max-size: 1m

# AriaNg is just a static web page, usually you only need to deploy on a single host.
  ariang:
    container_name: ariang
    image: p3terx/ariang
    ports:
      - 6880:6880
    restart: unless-stopped
    pull_policy: always
    logging:
      driver: json-file
      options:
        max-size: 1m
    networks:
      - default
      - traefik
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.ariang.rule=Host(`ariang.{{inventory_hostname}}`)"
      - "traefik.http.services.ariang.loadbalancer.server.port=6880"

  automated-dl:
    container_name: automated-dl
    image: ghcr.io/poppypop/automated-dl:latest
    user: "10010:10008"
    restart: unless-stopped
    pull_policy: always
    volumes:
      - /datas/dls/ddl:/datas/ddl
    environment:
      - SERVER=http://{{inventory_hostname}}
      - SECRET=Secret
      - DOWNLOADDIR=/datas/ddl/downloads
      - EXTRACTDIR=/datas/ddl/extract
      - ENDEDDIR=/datas/ddl/ended
      - SONARR_URL=http://{{inventory_hostname}}:8989
      - SONARR_API_KEY={{ sonarr_api_key }}
      - RADARR_URL=http://{{inventory_hostname}}:7878
      - RADARR_API_KEY={{ radarr_api_key }}
    logging:
      driver: json-file
      options:
        max-size: 1m
    networks:
      - default
      - traefik

networks:
  traefik:
    external: true
