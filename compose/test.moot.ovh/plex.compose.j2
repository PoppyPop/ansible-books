---
services:
  plex:
    container_name: plex
    image: plexinc/pms-docker
    restart: unless-stopped
    environment:
      - TZ=Europe/Paris
      - PLEX_CLAIM={{ plex_claim }}
      - PLEX_UID=999
      - PLEX_GID=1004
      - CHANGE_CONFIG_DIR_OWNERSHIP=false
    networks:
      macvlan:
        ipv4_address: 10.0.3.1
    hostname: plex.moot.ovh
    devices:
      - /dev/dri/renderD128:/dev/dri/renderD128
      - /dev/dri/card1:/dev/dri/card1
    volumes:
      - /opt/apps/plex/database:/config
      - /opt/apps/plex/transcode:/transcode
      - /datas/dls/media:/media
  plextraktwatch:
    image: ghcr.io/taxel/plextraktsync
    volumes:
      - /opt/apps/plex/plextraktsync:/app/config
    command: watch
    restart: unless-stopped
    environment:
      - PUID=999
      - PGID=1004
    depends_on:
      - plex
  plextraktsync:
    image: ghcr.io/taxel/plextraktsync
    command: sync
    container_name: plextraktsync
    profiles: ["schedule"]
    volumes:
      - /opt/apps/plex/plextraktsync:/app/config
    environment:
      - PUID=999
      - PGID=1004
    depends_on:
      - plex
  scheduler:
    image: mcuadros/ofelia:latest
    container_name: scheduler
    command: daemon --docker
    restart: unless-stopped
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    labels:
      ofelia.job-run.plextraktsync.schedule: "0 23 * * *"
      ofelia.job-run.plextraktsync.container: "plextraktsync"
      ofelia.job-run.plextraktsync.command: "sync"

networks:
  macvlan:
    external: true
