services:
  deluge:
    image: ghcr.io/linuxserver/deluge
    container_name: deluge
    environment:
      - PUID=10010
      - PGID=10008
      - TZ=Europe/Paris
      - UMASK_SET=007 #optional
      #- DELUGE_LOGLEVEL=error #optional
    hostname: deluge.moot.ovh
    networks:
      macvlan:
        ipv4_address: 10.0.3.4
    volumes:
      - /opt/apps/deluge/config:/config
      - /opt/apps/deluge/downloads:/downloads
    restart: unless-stopped
networks:
  macvlan:
    name: macvlan
    external: true
